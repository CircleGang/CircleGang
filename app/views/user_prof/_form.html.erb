<%= simple_form_for @user_prof, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@user_prof[:name]) %>
  <%= f.input :univ %>
  <%= error_span(@user_prof[:univ]) %>
  <%= f.input :age %>
  <%= error_span(@user_prof[:age]) %>
  <%= f.input :gender %>
  <%= error_span(@user_prof[:gender]) %>
  <%= f.input :bio %>
  <%= error_span(@user_prof[:bio]) %>
  <%= f.input :birth %>
  <%= error_span(@user_prof[:birth]) %>
  <%= f.input :image %>
  <%= error_span(@user_prof[:image]) %>
  <%= f.input :user_id %>
  <%= error_span(@user_prof[:user_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                user_profs_path, :class => 'btn btn-default' %>
<% end %>
